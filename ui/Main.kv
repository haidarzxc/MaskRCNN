# Reference Main.py
#: import main Main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

<Root>:
    storms_list_view: Storms_list_id
    Toolbar:
    BoxLayout:
        size_hint_y: (0.92)
        ListView:
            id: Storms_list_id
            adapter:
                ListAdapter(data=main.data(), cls=main.ListButton)


<Toolbar>:
    ActionBar:
        id: actBar
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Storms'
                with_previous: True
            ActionOverflow:

            ActionGroup:
                text: 'More'
                ActionButton:
                    text: 'view'
                    on_press: app.root.view()


